{
 "extends": ["stylelint-config-recommended-scss"],
 "rules": {
  "selector-class-pattern": "^.[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$",
  "selector-max-specificity": "0,3,3",
  "block-no-empty": true,
  "property-no-unknown": true,
  "at-rule-no-unknown": true,
  "color-no-invalid-hex": true
 }
}
